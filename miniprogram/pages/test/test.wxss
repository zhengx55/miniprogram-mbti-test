/* pages/test/test.wxss */
.container {
  padding: 20rpx 50rpx;
}

.test-index {
  display: flex;
  justify-content: center;
  color: blue;
}

.option {
  width: 100%;
  height: 140rpx;
  border-radius: 12rpx;
  border-left: 3px solid blue;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-weight: 300;
  font-size: 28rpx;
}

.active {
  background-color: red;

}

.option-hover {
  background-color: red;
  transition: all .5s cubic-bezier(0.075, 0.82, 0.165, 1);
}

.question {
  margin: 50rpx 0 50rpx 0;
  font-size: 36rpx;
}

.navigator {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
  margin-top: 180rpx;

}

.navigator-btn {
  width: max-content !important;
  margin: 0 !important;
  font-weight: 300;
  font-size: 28rpx;
  background-color: transparent;
  border: none;
  padding: 0 15rpx !important;

}

.progress-bar-container {
  width: 100%;
  height: 15rpx;
  border-radius: 12rpx;
  margin-top: 30rpx;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 3px 15px;
}

.progress-bar {
  width: 0%;
  height: 100%;
  border-radius: inherit;
  background-color: blue;
  transition: width .5s cubic-bezier(0.075, 0.82, 0.165, 1);
}

.submit-container {
  display: flex;
  justify-content: space-around;
  margin-top: 130rpx;
}

.btn {
  width: 200rpx !important;
  height: 60rpx;
  display: flex;
  color: blue;
  justify-content: center;
  align-items: center;
  margin: 0 !important;
  padding: 0 !important;
  font-weight: 300;
  font-size: 28rpx;
  background-color: transparent;
  border: 1px solid blue;
}