/* pages/report/report.wxss */
.container {
  background-color: rgba(229, 223, 233, 1);
  -webkit-overflow-scrolling: touch;
  padding-top: 60rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-intr {
  text-align: left;
  padding: 0 40rpx;
}

.report-title {
  font-size: 57rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #000000;
  width: 100%;
  text-align: center;
  margin-top: 47rpx;
}

.share_button {
  background: linear-gradient(0deg, #7148B5, #8769E9, #715DD3);
  width: 100% !important;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 56rpx !important;
  font-family: MFLI;
  font-weight: 400 !important;
  color: #000000;
  margin-top: auto !important;
  padding: 0 !important;
}