/* pages/home/home.wxss */
.container {
  padding: 40rpx;
}

.btn-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 62vh;
}

.btn {
  font-size: 50rpx;
  font-weight: 800 !important;
  color: #0C0C0C;
  width: 260rpx !important;
  height: 101rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: MFLI;
  background: #baef47;
  box-shadow: -5rpx 5rpx 8rpx 8rpx rgba(79, 135, 46, 0.35), 8rpx -8rpx 8rpx 8rpx inset rgba(79, 135, 46, 0.35);
  border-radius: 16rpx;
}

.my-report {
  width: 100%;
  height: 230rpx;
  margin-top: 40rpx;
  background: transparent;
  box-shadow: inset 10rpx -10rpx 8rpx 10rpx rgba(79, 135, 46, 0.35), 0rpx 10rpx 65rpx 0rpx #3A5D15, 0rpx 4rpx 8rpx 0rpx rgba(79, 135, 46, 0.35);
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.my-report .no-report {
  font-size: 40rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #1C1717;
}


.page {
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
  background-image: url('https://636c-cloud1-6gbezp7fd83b299f-1316859772.tcb.qcloud.la/%E8%83%8C%E6%99%AF.png?sign=591d7de20ad0beee01d708ef12e7f20e&t=1676775450');
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100% 100%;
}

.follow-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border: 1px solid rgba(0, 0, 0, 0.9);
  box-shadow: -4rpx 7rpx 0rpx 0rpx rgba(58, 93, 21, 0.95);
  border-radius: 29rpx;
  padding: 10rpx;
  width: max-content !important;
  font-size: 25rpx;
  font-weight: 400;
  color: #000000;
  margin-left: auto;
  margin-top: 20rpx;

}

.report-swiper {
  padding: 40rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.report-btn {
  padding: 0 15rpx !important;
  margin: 0 !important;
  width: max-content !important;
  height: 60rpx;
  background: #FFFFFF;
  border: 1px solid rgba(0, 0, 0, 0.9);
  box-shadow: -4rpx 7rpx 0rpx 0rpx rgba(58, 93, 21, 0.95);
  border-radius: 29rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 300;
  font-size: 28rpx;
}

.qr-code-img {
  width: 100%;
}

.mask {
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.7);
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  position: fixed;
}

.modal {
  z-index: 1000;
  position: absolute;
  background-color: #CCCCCC;
  width: 80%;
  left: 10%;
  top: 20%;
  animation: popupAnimate .5s ease-in forwards;
}

@keyframes popupAnimate {
  0% {
    opacity: 0;
    scale: 0;
  }

  100% {
    opacity: 1;
    scale: 1;
  }
}