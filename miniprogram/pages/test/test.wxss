/* pages/test/test.wxss */
page {
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
  background-image: url('https://636c-cloud1-6gbezp7fd83b299f-1316859772.tcb.qcloud.la/%E8%83%8C%E6%99%AF03.png?sign=a4e175e292a7942e9f9bcc2c5b275da5&t=1676956894');
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100% 100%;
}

.container {
  padding: 20rpx 70rpx;
}

.test-index {
  display: flex;
  justify-content: center;
  font-size: 42rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #1C1C1C;
}



.option {
  width: 100%;
  height: 140rpx;
  border-radius: 12rpx;
  border-left: 10rpx solid rgba(99, 147, 102, 1);
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-weight: 300;
  font-size: 28rpx;
}

.active {
  background-color: red;
}

.option-hover {
  background-color: red;
  transition: all .5s cubic-bezier(0.075, 0.82, 0.165, 1);
}

.question {
  margin: 50rpx 0 50rpx 0;
  font-size: 34rpx;
  font-weight: 400;
  color: #1C1C1C;
}

.navigator {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
  margin-top: 180rpx;

}

.navigator-btn {
  margin:0 10rpx !important;
  font-weight: 300;
  font-size: 28rpx;
  background-color: transparent;
  border: none;
  padding: 0 15rpx !important;
  width: 182rpx !important;
  height: 76rpx;
  background: rgba(255, 255, 255, 0);
  box-shadow: 0rpx 9rpx 13rpx 0rpx rgba(58, 93, 21, 0.34), 0rpx 8rpx 16rpx 0rpx rgba(192, 208, 182, 0.35);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}

.progress-bar-container {
  width: 100%;
  height: 15rpx;
  border-radius: 12rpx;
  margin-top: 30rpx;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 3px 15px;
}

.progress-bar {
  width: 0%;
  height: 100%;
  border-radius: inherit;
  background: rgba(99, 147, 102, 1);
  transition: width .5s cubic-bezier(0.075, 0.82, 0.165, 1);
}

.submit-container {
  display: flex;
  justify-content: space-between;
  margin-top: 130rpx;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 !important;
  padding: 0 !important;
  width: 270rpx !important;
  height: 102rpx !important;
  background: rgba(80, 155, 68, 0.20);
  box-shadow: 0rpx 9rpx 13rpx 0rpx rgba(58, 93, 21, 0.34), 0rpx 8rpx 16rpx 0rpx rgba(192, 208, 182, 0.35);
  border-radius: 30rpx;
  font-size: 56rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #1C1C1C;
}