/* pages/report/report.wxss */
.container {
  background-color: rgba(229, 223, 233, 1);
  -webkit-overflow-scrolling: touch;
  padding-top: 60rpx;
  display: flex;
  flex-direction: column;
}

.page-intr {
  text-align: left;
  padding: 0 40rpx;
}

.title {
  margin: 33rpx 0 20rpx 0;
  font-size: 42rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #000000;
  text-align: center;
}

.description-container {
  background: rgba(156, 130, 177, 0.20);
  margin: 0 40rpx;
  box-shadow: 0rpx 9rpx 13rpx 0rpx rgba(58, 93, 21, 0.34), 0rpx 8rpx 16rpx 0rpx rgba(192, 208, 182, 0.35);
  border-radius: 30rpx;
  padding: 35rpx 20rpx;
}

.score-panel {
  margin: 33rpx 40rpx 0 40rpx;
  position: relative;
  height: 285rpx;
  background: rgba(255, 255, 255, 0);
  box-shadow: 0rpx 9rpx 13rpx 0rpx rgba(58, 93, 21, 0.34), 0rpx 8rpx 16rpx 0rpx rgba(192, 208, 182, 0.35);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 40rpx;
  row-gap: 20rpx;
}

.report-tags {
  margin: 100rpx 40rpx 0 40rpx;
  height: 316rpx;
  background: rgba(255, 255, 255, 0);
  box-shadow: 0rpx 9rpx 13rpx 0rpx rgba(58, 93, 21, 0.34), 0rpx 8rpx 16rpx 0rpx rgba(192, 208, 182, 0.35);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.humen {
  position: absolute;
  top: -40%;
  width: 300rpx;
  right: 0;
}

.bar-outer {
  width: 350rpx;
  height: 30rpx;
  background: #EEECEF;
  border-radius: 13px;
  position: relative;
}

.bar-inner-left {
  position: absolute;
  top: 0;
  left: 0;
  height: 30rpx;
  border-radius: 13px;
  background-color: rgba(34, 136, 39, 0.80);
  width: 0;
  transition: width .5s ease;
}

.bar-inner-right {
  position: absolute;
  top: 0;
  right: 0;
  height: 30rpx;
  border-radius: 13px;
  background-color: rgba(54, 13, 86, 0.80);
  width: 0;
  transition: width .5s ease;
}

.tags-container {
  display: flex;
  margin-top: 40rpx;
  column-gap: 15rpx;
  margin-left: 40rpx;
}

.bar-container {
  display: flex;
  column-gap: 10rpx;
  align-items: center;
}

.score {
  font-size: 21rpx;
  font-weight: 400;
  color: #49994E;
}

.score-right {
  font-size: 21rpx;
  font-weight: 400;
  color: rgba(89, 55, 115, 1);
}

.score-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: Source Han Sans SC;
  font-weight: 400;
  align-items: center;
  color: #000000;
}

.tags-item {
  width: 96rpx;
  height: 41rpx;
  background: linear-gradient(0deg, #F8C0EA, #A48ED2);
  box-shadow: 0rpx 2rpx 13rpx 0rpx rgba(51, 21, 93, 0.34), 0rpx 8rpx 16rpx 0rpx rgba(192, 208, 182, 0.35);
  border-radius: 20rpx;
  font-size: 21rpx;
  font-weight: 400;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-title {
  font-size: 75rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #000000;
  margin-top: 100rpx;
  margin-left: 40rpx;
}

.description {
  font-size: 22rpx;
  font-weight: 400;
  color: #000000;
}

.report-title {
  font-size: 57rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #000000;
  width: 100%;
  text-align: center;
  margin-top: 47rpx;
}

.share_button {
  background: linear-gradient(0deg, #7148B5, #8769E9, #715DD3);
  width: 100% !important;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 56rpx !important;
  font-family: MFLI;
  font-weight: 400 !important;
  color: #000000;
  margin-top: 100rpx !important;
  padding: 0 !important;
}