/* pages/profile/profile.wxss */
page {
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
  background-image: url('https://636c-cloud1-6gbezp7fd83b299f-1316859772.tcb.qcloud.la/%E8%83%8C%E6%99%AF02.png?sign=5b70fd21567b3b5ac4ff45ffbc479e58&t=1676956927');
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100% 100%;
}

.container {
  height: 100%;
  width: 100%;
  -webkit-overflow-scrolling: touch;
}

.title {
  font-family: MFLI;
  font-size: 32rpx;
  font-weight: 400;
  color: #272727;
  margin-left: 5%;
}

.subtitle {
  margin-top: 40rpx;
  margin-left: 5%;

}

.options.large {
  width: 560rpx;
}

.options {
  width: 240rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(243, 243, 243, 1);
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 300;
}

.select-container {
  width: 90%;
  background: rgba(255, 255, 255, 0);
  box-shadow: 0rpx 8rpx 13rpx 0rpx rgba(58, 93, 21, 0.34), inset 10rpx -8rpx 16rpx 0rpx rgba(192, 208, 182, 0.35);
  display: flex;
  justify-content: center;
  border-radius: 30rpx;
  flex-shrink: 0;
  padding: 20rpx;
  margin: 20rpx 0 20rpx 5%;
  flex-wrap: wrap;
  column-gap: 50rpx;
  row-gap: 30rpx;
  box-sizing: border-box;
}


.btn {
  width: 90% !important;
  margin-top: 100rpx;
  height: 100rpx;
  background: linear-gradient(0deg, #AAFAE0, #59F2CC, #4AB2EC);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  font-family: MFLI;
  font-weight: 400;
  color: #1C1717;
}

.options.active {
  background-color: red;
}